<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
</head>
<body class="bg-gray-100 text-gray-900 font-sans flex items-center justify-center min-h-screen">
    <div class="w-full max-w-md bg-white p-8 rounded-lg shadow-lg">
        <h3 class="text-2xl font-semibold mb-6 text-center">Log in to Your Account</h3>

        <% if (message) { %>
            <div id="toast-message" data-message="<%= message %>"></div>
        <% } %>

        <form action="/login" method="post" class="space-y-4">
            <div>
                <% if (message === 'emailExists') { %>
                    <p style="color: red;">This email is already registered. Please log in.</p>
                <% } %>
                
                <input class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 transition" type="email" placeholder="Email" name="email" required>
            </div>
            <div class="relative">
                <!-- <input class="..." type="password" name="password" required oninput="this.value = this.value.trim()"> -->
                <input id="password" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 transition" 
                type="password" placeholder="Password" name="password" required oninput="this.value = this.value.trim()">
         
         
         
                <!-- <input id="password" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 transition" type="password" placeholder="Password" name="password" required> -->
                <button type="button" class="absolute right-3 top-2 text-gray-600 hover:text-gray-800" onclick="togglePassword()">üëÅÔ∏è</button>
            </div>
            <input class="w-full px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg cursor-pointer transition" type="submit" value="Login">
        </form>
    </div>

    <script>
        function togglePassword() {
            let passField = document.getElementById("password");
            passField.type = passField.type === "password" ? "text" : "password";
        }

        // Show toast messages dynamically
        document.addEventListener("DOMContentLoaded", function () {
            let message = document.getElementById("toast-message")?.getAttribute("data-message");
            if (message) {
                let toastText = message === "registered" ? "User registered successfully! Please log in."
                            : message === "invalid" ? "Invalid email or password"
                            : message === "incorrect" ? "Incorrect password"
                            : "";

                let bgColor = message === "registered" ? "green" : "red";

                Toastify({
                    text: toastText,
                    duration: 3000,
                    gravity: "top",
                    position: "right",
                    backgroundColor: bgColor,
                }).showToast();
            }
        });
    </script>
</body>
</html>
